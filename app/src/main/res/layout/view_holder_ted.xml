<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_ted1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ted_app_width"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:labelFor="@id/iv_ted1"
        android:scaleType="centerCrop"
        android:src="@drawable/tednew1" />


    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ted1"
        android:layout_alignLeft="@id/tv_ted1"
        android:text="Jeremy Forbes"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_ted1"
        android:layout_width="@dimen/ted_app_title_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_ted1"
        android:layout_alignLeft="@id/iv_ted1"
        android:layout_margin="5dp"
        android:text="A teen scientist's invention to help wounds heal"

        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_ted1"
        android:layout_alignRight="@id/iv_ted1"
        android:layout_marginEnd="22dp"
        android:text="6:58"
        android:textColor="#FFFFFF" />
</RelativeLayout>


